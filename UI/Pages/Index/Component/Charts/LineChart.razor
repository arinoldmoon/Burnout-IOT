@inherits LineChartComponent

<RadzenCard style="height: 100%;">
    <ChildContent>
        <RadzenChart style="height: 100%; min-height: 300px;" ColorScheme="ColorScheme.Pastel">
            <RadzenLineSeries Data="@SetPoint" CategoryProperty="Time" Title="SetPoint" LineType="LineType.Solid"
                ValueProperty="TempValue">
                <RadzenMarkers MarkerType="MarkerType.Square" />
            </RadzenLineSeries>

            <RadzenLineSeries Data="@Actual" CategoryProperty="Time" Title="Actual" LineType="LineType.Solid"
                ValueProperty="TempValue" Stroke="red">
                <RadzenMarkers MarkerType="MarkerType.None" />
            </RadzenLineSeries>

            <RadzenLineSeries Data="@AFB" CategoryProperty="Time" Title="AFB" LineType="LineType.Solid"
                ValueProperty="TempValue" Stroke="green">
                <RadzenMarkers MarkerType="MarkerType.None" />
            </RadzenLineSeries>

            <RadzenLegend Position="LegendPosition.Top">
            </RadzenLegend>
            <RadzenValueAxis Min="0" Max="900" Step="100">
                <RadzenGridLines Visible="true" />
                <RadzenAxisTitle Text="Tempurature" />
            </RadzenValueAxis>
            <RadzenCategoryAxis Padding="20" FormatString="{0:hh:mm tt}" />
        </RadzenChart>
    </ChildContent>
</RadzenCard>
