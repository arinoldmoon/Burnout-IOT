@inherits SensorCardComponent

<RadzenCard Style="height:110px; padding:20px 0px 0px 0px;">
    <ChildContent>
        <div class="col-md-12" style="text-align: center">
            <div class="row align-items-center">
                <div class="col-md-12">
                    <RadzenHtml>
                        @if (State)
                        {
                            <RadzenIcon class="ph-circle-fill" style="color: #5dbf74; font-size: 1.8em;" />
                        }
                        else
                        {
                            <RadzenIcon class="ph-circle-fill" style="color: #f9777f; font-size: 1.8em;" />
                        }
                    </RadzenHtml>
                </div>
                <div class="col-md-12">
                    <RadzenLabel style="font-size: 1.2em" Text="@($"{CardName}")">
                    </RadzenLabel>
                </div>
            </div>
        </div>
    </ChildContent>
</RadzenCard>